gris = #939598
verde = #044d64
celeste = #02aec3
negro = #231f20
header 
    width 100%
    height 64px
    background negro
    line-height 64px
    position fixed
    top 0
    .logo
        display inline-block
        background url('imagenes/sumergidaLogo.png')
        background-size cover
        height 40px
        width 217px
        margin 12px 0 0 20px
        @media screen and (min-resolution: 2dppx)
            background url('imagenes/sumergidaLogo2x.png') cover
        @media screen and (min-resolution: 3dppx)
            background url('imagenes/sumergidaLogo3x.png') cover
nav
 position absolute
 right 0 
 top 0
 line-height 50px
 a 
    color #e1e1e1
    text-decoration none
 ul 
  display flex
  margin 0
  @media(max-width: 992px)
   display none
  li 
   margin-right 30px
   list-style: none

.fa-bars
 font-size 2rem
 position absolute
 right 10px 
 top 10px
 @media(min-width: 993px)
  display none
.hidden 
 display none